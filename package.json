{
  "name": "bonkers-ui",
  "version": "1.0.3",
  "private": false,
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "vue-tsc && vite build",
    "lint:script": "eslint --fix './src/**/*.{ts,tsx,vue}'",
    "lint:style": "stylelint --fix './src/**/*.{css,scss,vue}'",
    "lint:markup": "vue-tsc --noEmit",
    "deploy": "gh-pages -d storybook-static",
    "typecheck": "tsc --noEmit && vue-tsc --noEmit",
    "test": "vitest run",
    "pack": "cd dist && npm pack --pack-destination ../",
    "upgrade": "bun x npm-check-updates -ui",
    "i": "bun install --frozen-lockfile"
  },
  "dependencies": {
    "tailwindcss": "^3.4.3",
    "vue": "^3.4.21"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-regular-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/vue-fontawesome": "^3.0.5",
    "tailwindcss": "^3.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.6",
    "@storybook/addon-links": "^8.0.6",
    "@storybook/vue3": "^8.0.6",
    "@storybook/vue3-vite": "^8.0.6",
    "@types/bun": "^1.0.12",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.5",
    "autoprefixer": "^10.4.19",
    "bun-types": "^1.1.3",
    "eslint": "8.56.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "eslint-plugin-vue": "^9.24.1",
    "gh-pages": "^6.1.1",
    "husky": "4.3.8",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-html": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.0.6",
    "storybook-tailwind-dark-mode": "^1.0.22",
    "stylelint": "15.11.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^35.0.0",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vite-plugin-css-injected-by-js": "^3.5.0",
    "vite-plugin-dts": "^3.8.1",
    "vite-plugin-static-copy": "^1.0.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vue-eslint-parser": "^9.4.2",
    "vue-loader": "^17.4.2",
    "vue-router": "^4.3.0",
    "vue-tsc": "^2.0.11"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "bun eslint --fix",
      "bash -c 'bun typecheck'"
    ],
    "*.{css,vue,tsx}": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "bun typecheck && bun lint-staged && bun run test"
    }
  },
  "license": "MIT",
  "main": "./bonkers-ui.umd.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./types": {
      "import": "./types.js",
      "types": "./types.d.ts"
    },
    "./plugin": "./plugin.ts",
    "./*": {
      "types": "./components/*/index.d.ts",
      "import": "./components/*/index.js"
    },
    "./components/*": {
      "types": "./components/*/index.d.ts",
      "import": "./components/*/index.js"
    }
  },
  "overrides": {
    "rollup": "npm:@rollup/wasm-node"
  }
}
