{
	"name": "bonkers-ui",
	"version": "1.0.0",
	"private": false,
	"scripts": {
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"lint:script": "eslint --fix './src/**/*.{ts,tsx,vue}'",
		"lint:style": "stylelint --fix './src/**/*.{css,scss,vue}'",
		"lint:markup": "vue-tsc --noEmit",
		"test": "jest",
		"deploy": "gh-pages -d storybook-static",
		"typecheck": "tsc --noEmit && vue-tsc --noEmit",
		"i": "yarn install --frozen-lockfile"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.2.0",
		"@fortawesome/free-brands-svg-icons": "^6.2.0",
		"@fortawesome/free-regular-svg-icons": "^6.2.0",
		"@fortawesome/free-solid-svg-icons": "^6.2.0",
		"@fortawesome/vue-fontawesome": "^3.0.1",
		"@vueuse/components": "^9.4.0",
		"@vueuse/core": "^9.4.0",
		"husky": "4.3.8",
		"vue": "^3.2.41"
	},
	"devDependencies": {
		"@storybook/addon-actions": "^6.5.13",
		"@storybook/addon-essentials": "^6.5.13",
		"@storybook/addon-links": "^6.5.13",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/builder-vite": "^0.2.4",
		"@storybook/vue3": "^6.5.13",
		"@types/jest": "^29.2.0",
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"@vitejs/plugin-vue": "^3.2.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"@vue/test-utils": "^2.2.0",
		"@vue/vue3-jest": "^27.0.0",
		"babel-jest": "27",
		"eslint": "8.26.0",
		"eslint-plugin-vue": "^9.6.0",
		"gh-pages": "^4.0.0",
		"jest": "27.3.1",
		"lint-staged": "^13.0.2",
		"postcss": "^8.4.18",
		"postcss-html": "^1.4.1",
		"storybook-tailwind-dark-mode": "^1.0.15",
		"stylelint": "^14.14.0",
		"stylelint-config-recommended": "^9.0.0",
		"stylelint-config-recommended-vue": "^1.4.0",
		"stylelint-config-standard": "^29.0.0",
		"tailwindcss": "^3.2.1",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4",
		"vite": "^3.2.0",
		"vue-eslint-parser": "^9.1.0",
		"vue-loader": "^17.0.0",
		"vue-tsc": "^1.0.9"
	},
	"jest": {
		"preset": "ts-jest",
		"moduleFileExtensions": [
			"vue",
			"js",
			"jsx",
			"ts"
		],
		"testEnvironment": "jsdom",
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			".*\\.(js)$": "babel-jest",
			"^.+\\.tsx?$": "ts-jest",
			".*\\.(vue)$": "@vue/vue3-jest"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,vue}": [
			"eslint --fix",
			"bash -c 'yarn typecheck'"
		],
		"*.{css,vue,tsx}": "stylelint --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn typecheck && yarn lint-staged && yarn test"
		}
	},
	"license": "MIT"
}
