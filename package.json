{
	"name": "bonkers-ui",
	"version": "1.0.0",
	"private": false,
	"scripts": {
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"build": "rm -rf dist && vite build && tsc --emitDeclarationOnly && tsc-alias && tcm -o dist src",
		"lint:script": "eslint --fix './src/**/*.{ts,tsx,vue}'",
		"lint:style": "stylelint --fix './src/**/*.{css,scss,vue}'",
		"lint:markup": "vue-tsc --noEmit",
		"deploy": "gh-pages -d storybook-static",
		"typecheck": "tsc --noEmit && vue-tsc --noEmit",
		"test": "vitest run",
		"i": "yarn install --frozen-lockfile"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.4.2",
		"@fortawesome/free-brands-svg-icons": "^6.4.2",
		"@fortawesome/free-regular-svg-icons": "^6.4.2",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@fortawesome/vue-fontawesome": "^3.0.3",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"storybook-addon-designs": "^6.3.1",
		"vue": "^3.3.4",
		"vue-router": "^4.2.5"
	},
	"peerDependencies": {
		"vue": "^3.0.0"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^7.4.5",
		"@storybook/addon-links": "^7.4.5",
		"@storybook/addon-mdx-gfm": "^7.4.5",
		"@storybook/vue3": "^7.4.5",
		"@storybook/vue3-vite": "^7.4.5",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"@vitejs/plugin-vue": "^4.3.4",
		"@vue/eslint-config-typescript": "^12.0.0",
		"@vue/test-utils": "^2.4.1",
		"eslint": "8.50.0",
		"eslint-plugin-storybook": "^0.6.14",
		"eslint-plugin-vue": "^9.17.0",
		"gh-pages": "^6.0.0",
		"husky": "4.3.8",
		"jsdom": "^22.1.0",
		"lint-staged": "^14.0.1",
		"postcss": "^8.4.30",
		"postcss-html": "^1.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.4.5",
		"storybook-tailwind-dark-mode": "^1.0.22",
		"stylelint": "^15.10.3",
		"stylelint-config-recommended": "^13.0.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-standard": "^34.0.0",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.8",
		"typed-css-modules": "^0.8.0",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vite-plugin-css-injected-by-js": "^3.3.0",
		"vite-plugin-dts": "^3.6.1",
		"vite-tsconfig-paths": "^4.2.1",
		"vitest": "^0.34.5",
		"vue-eslint-parser": "^9.3.1",
		"vue-loader": "^17.2.2",
		"vue-tsc": "^1.8.13"
	},
	"resolutions": {
		"strip-ansi": "^6.0.1",
		"string-width": "^4.2.2",
		"wrap-ansi": "^7.0.0"
	},
	"lint-staged": {
		"*.{ts,tsx,vue}": [
			"yarn eslint --fix",
			"bash -c 'yarn typecheck'"
		],
		"*.{css,vue,tsx}": "stylelint --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn typecheck && yarn lint-staged && yarn test"
		}
	},
	"license": "MIT",
	"files": [
		"dist",
		"src/components"
	],
	"main": "dist/bonkers-ui.umd.js",
	"module": "dist/bonkers-ui.es.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/bonkers-ui.es.js",
			"require": "./dist/bonkers-ui.umd.js"
		}
	}
}
