{
	"name": "bonkers-ui",
	"version": "1.0.0",
	"private": false,
	"scripts": {
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"lint:script": "eslint --fix './src/**/*.{ts,tsx,vue}'",
		"lint:style": "stylelint --fix './src/**/*.{css,scss,vue}'",
		"lint:markup": "vue-tsc --noEmit",
		"deploy": "gh-pages -d storybook-static",
		"typecheck": "tsc --noEmit && vue-tsc --noEmit",
		"test": "vitest run",
		"i": "yarn install --frozen-lockfile"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.4.0",
		"@fortawesome/free-brands-svg-icons": "^6.4.0",
		"@fortawesome/free-regular-svg-icons": "^6.4.0",
		"@fortawesome/free-solid-svg-icons": "^6.4.0",
		"@fortawesome/vue-fontawesome": "^3.0.3",
		"bent": "^7.3.12",
		"simple-git": "^3.18.0",
		"storybook-addon-designs": "^6.3.1",
		"vue": "^3.2.47",
		"vue-router": "^4.1.6"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^7.0.4",
		"@storybook/addon-links": "^7.0.4",
		"@storybook/addon-mdx-gfm": "^7.0.4",
		"@storybook/vue3": "^7.0.4",
		"@storybook/vue3-vite": "^7.0.4",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"@vitejs/plugin-vue": "^4.1.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"@vue/test-utils": "^2.3.2",
		"eslint": "8.38.0",
		"eslint-plugin-storybook": "^0.6.11",
		"eslint-plugin-vue": "^9.10.0",
		"gh-pages": "^5.0.0",
		"husky": "4.3.8",
		"jsdom": "^21.1.1",
		"lint-staged": "^13.2.1",
		"postcss": "^8.4.21",
		"postcss-html": "^1.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.0.4",
		"storybook-tailwind-dark-mode": "^1.0.16",
		"stylelint": "^15.4.0",
		"stylelint-config-recommended": "^11.0.0",
		"stylelint-config-recommended-vue": "^1.4.0",
		"stylelint-config-standard": "^32.0.0",
		"tailwindcss": "^3.3.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"vite": "^4.2.1",
		"vitest": "^0.30.1",
		"vue-eslint-parser": "^9.1.1",
		"vue-loader": "^17.0.1",
		"vue-tsc": "^1.2.0"
	},
	"lint-staged": {
		"*.{ts,tsx,vue}": [
			"eslint --fix",
			"bash -c 'yarn typecheck'"
		],
		"*.{css,vue,tsx}": "stylelint --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn typecheck && yarn lint-staged && yarn test"
		}
	},
	"license": "MIT"
}
