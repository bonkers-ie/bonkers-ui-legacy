{
	"name": "bonkers-ui",
	"version": "1.0.1",
	"private": false,
	"scripts": {
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"build": "vue-tsc && vite build",
		"lint:script": "eslint --fix './src/**/*.{ts,tsx,vue}'",
		"lint:style": "stylelint --fix './src/**/*.{css,scss,vue}'",
		"lint:markup": "vue-tsc --noEmit",
		"deploy": "gh-pages -d storybook-static",
		"typecheck": "tsc --noEmit && vue-tsc --noEmit",
		"test": "vitest run",
		"pack": "cd dist && npm pack --pack-destination ../",
		"i": "bun install --frozen-lockfile"
	},
	"dependencies": {
		"tailwindcss": "^3.4.0",
		"vue": "^3.3.13"
	},
	"peerDependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.4.2",
		"@fortawesome/free-brands-svg-icons": "^6.4.2",
		"@fortawesome/free-regular-svg-icons": "^6.4.2",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@fortawesome/vue-fontawesome": "^3.0.5",
		"tailwindcss": "^3.0.0",
		"vue": "^3.0.0"
	},
	"devDependencies": {
		"vue-router": "^4.2.5",
		"bun-types": "^1.0.18",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"shelljs": "^0.8.5",
		"@storybook/addon-essentials": "^7.6.6",
		"@storybook/addon-links": "^7.6.6",
		"@storybook/vue3": "^7.6.6",
		"@storybook/vue3-vite": "^7.6.6",
		"@types/glob": "^8.1.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"@vitejs/plugin-vue": "^4.5.2",
		"@vue/eslint-config-typescript": "^12.0.0",
		"@vue/test-utils": "^2.4.3",
		"autoprefixer": "^10.4.16",
		"eslint": "8.56.0",
		"eslint-plugin-storybook": "^0.6.15",
		"eslint-plugin-vue": "^9.19.2",
		"gh-pages": "^6.1.0",
		"husky": "4.3.8",
		"jsdom": "^23.0.1",
		"lint-staged": "^15.2.0",
		"postcss": "^8.4.32",
		"postcss-cli": "^11.0.0",
		"postcss-html": "^1.5.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.6.6",
		"storybook-tailwind-dark-mode": "^1.0.22",
		"stylelint": "15.11.0",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-standard": "^35.0.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vite-plugin-css-injected-by-js": "^3.3.0",
		"vite-plugin-dts": "^3.6.4",
		"vite-plugin-static-copy": "^1.0.0",
		"vite-tsconfig-paths": "^4.2.2",
		"vitest": "^1.1.0",
		"vue-eslint-parser": "^9.3.2",
		"vue-loader": "^17.3.1",
		"vue-tsc": "^1.8.25"
	},
	"lint-staged": {
		"*.{ts,tsx,vue}": [
			"bun eslint --fix",
			"bash -c 'bun typecheck'"
		],
		"*.{css,vue,tsx}": "stylelint --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "bun typecheck && bun lint-staged && bun run test"
		}
	},
	"license": "MIT",
	"main": "./bonkers-ui.umd.js",
	"module": "./index.js",
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./types": {
			"import": "./types.js",
			"types": "./types.d.ts"
		},
		"./plugin": "./plugin.ts",
		"./*": {
			"types": "./components/*/index.d.ts",
			"import": "./components/*/index.js"
		},
		"./components/*": {
			"types": "./components/*/index.d.ts",
			"import": "./components/*/index.js"
		}
	},
	"overrides": {
		"rollup": "npm:@rollup/wasm-node"
	}
}
