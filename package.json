{
	"name": "bonkers-ui",
	"version": "1.0.0",
	"private": false,
	"scripts": {
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"lint:script": "eslint --fix './src/**/*.{ts,tsx,vue}'",
		"lint:style": "stylelint --fix './src/**/*.{css,scss,vue}'",
		"lint:markup": "vue-tsc --noEmit",
		"deploy": "gh-pages -d storybook-static",
		"typecheck": "tsc --noEmit && vue-tsc --noEmit",
		"test": "vitest run",
		"i": "yarn install --frozen-lockfile"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.4.0",
		"@fortawesome/free-brands-svg-icons": "^6.4.0",
		"@fortawesome/free-regular-svg-icons": "^6.4.0",
		"@fortawesome/free-solid-svg-icons": "^6.4.0",
		"@fortawesome/vue-fontawesome": "^3.0.3",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"storybook-addon-designs": "^6.3.1",
		"vue": "^3.3.4",
		"vue-router": "^4.2.4"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^7.2.0",
		"@storybook/addon-links": "^7.2.0",
		"@storybook/addon-mdx-gfm": "^7.2.0",
		"@storybook/vue3": "^7.2.0",
		"@storybook/vue3-vite": "^7.2.0",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vue/eslint-config-typescript": "^11.0.3",
		"@vue/test-utils": "^2.4.1",
		"eslint": "8.46.0",
		"eslint-plugin-storybook": "^0.6.13",
		"eslint-plugin-vue": "^9.16.1",
		"gh-pages": "^5.0.0",
		"husky": "4.3.8",
		"jsdom": "^22.1.0",
		"lint-staged": "^13.2.3",
		"postcss": "^8.4.27",
		"postcss-html": "^1.4.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.2.0",
		"storybook-tailwind-dark-mode": "^1.0.22",
		"stylelint": "^15.10.2",
		"stylelint-config-recommended": "^13.0.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-standard": "^34.0.0",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.8",
		"vitest": "^0.34.1",
		"vue-eslint-parser": "^9.3.1",
		"vue-loader": "^17.2.2",
		"vue-tsc": "^1.8.8"
	},
	"resolutions": {
		"strip-ansi": "^6.0.1",
		"string-width": "^4.2.2",
		"wrap-ansi": "^7.0.0"
	},
	"lint-staged": {
		"*.{ts,tsx,vue}": [
			"yarn eslint --fix",
			"bash -c 'yarn typecheck'"
		],
		"*.{css,vue,tsx}": "stylelint --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn typecheck && yarn lint-staged && yarn test"
		}
	},
	"license": "MIT"
}
